Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 90
       , overrideRedirect = False
       , commands = [ Run Weather "EDDK" ["-t" ," <tempC>C"
                            ,"-L"       ,"15"
                            ,"-H"       ,"28"
                            ,"--normal" ,"green"
                            ,"--high"   ,"red"
                            ,"--low"    ,"lightblue"
                            ] 36000
                    , Run Memory ["-t","Mem: <usedratio>%"] 50
                    , Run Swap [] 50
                    , Run Date "%a %b %_d %k:%M" "date" 10
                    , Run MultiCpu       [ "--template" , "Cpu: <total0>% | <total1>% | <total2>% | <total3>% | <total4>% | <total5>% | <total6>% | <total7>%"
                             , "--Low"      , "50"         -- units: %
                             , "--High"     , "85"         -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "red"
                             ] 50
                    , Run Battery        [ "--template" , "Batt: <acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "red "
                             , "--normal"   , "orange"
                             , "--high"     , "green"

                             , "--" -- battery specific options
                                        -- discharging status
                                        , "-o"	, "<left>% (<timeleft>)"
                                        -- AC "on" status
                                        , "-O"	, "<fc=#dAA520>Charging</fc>"
                                        -- charged status
                                        , "-i"	, "<fc=#006000>Charged</fc>"
                              ] 600
                    , Run DynNetwork     [ "--template" , "<dev>: <tx> kB/s | <rx> kB/s"
                                                 , "--Low"      , "5000"       -- units: B/s
                                                 , "--High"     , "10000"       -- units: B/s
                                                 , "--low"      , "darkgreen"
                                                 , "--normal"   , "darkorange"
                                                 , "--high"     , "red"
                                                 ] 50
                    , Run Com "/home/jey/current_volume.sh" [] "VOL" 1
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% } %dynnetwork% { %battery% | %multicpu% | %memory% * %swap% | %EDDK% | %VOL% <fc=#ee9a00>%date%</fc>"
       }
